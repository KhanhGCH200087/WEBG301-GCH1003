{% extends 'base.html.twig' %}


{% block body %}
    <div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Class List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('classroom_add') }}">
                <button type="button" class="btn btn-primary" >Add New</button>
            </a>
        </th>
    </tr>
    <tr>

        <th class="text text-success">Id</th>
        <th class="text text-success">Name</th>
        <th class="text text-info"> Function </th>

    </tr>
    {% for classroom in classrooms %}
        <tr>
            <td>{{ classroom.id }}</td>
            <td>{{ classroom.Class_name }}</td> 
            <td>
            <div class="btn-group">
                <a class="text-decoration-none" href="{{ path('classroom_detail', {'id' : classroom.id }) }}">
                    <button type="button" class="btn btn-primary">Detail</button>             
                </a>
                <a class="text-decoration-none" href="{{ path('classroom_edit', {'id' : classroom.id }) }}">
                    <button type="button" class="btn btn-success">Edit</button>   
                </a>
    	        <a class="text-decoration-none" href="{{ path('classroom_delete', {'id' : classroom.id }) }}"
                onclick="return confirm('Are you sure to delete this Class ?');"
                >
                    <button type="button" class="btn btn-warning">Delete</button>   
                </a>
            </div>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
