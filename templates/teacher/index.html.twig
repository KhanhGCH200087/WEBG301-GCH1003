{% extends 'base.html.twig' %}


{% block body %}
    <div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Teacher List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('teacher_add') }}">
                <img src="{{ asset('') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Teacher Id</th>
        <th class="text text-success">Teacher Name</th>
        <th class="text text-success">Teacher Age</th>
        <th class="text text-success">Teacher Gender</th>
        <th class="text text-success">Teacher image </th>

    </tr>
    {% for teacher in teachers %}
        <tr>
            <td>{{ teacher.id }}</td>
            <td>{{ teacher.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('teacher_detail', {'id' : teacher.id }) }}">
                    <img src="{{ teacher.image }}" width="100" height="100">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('teacher_detail', {'id' : teacher.id }) }}">
                    <img src="{{ asset('') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('teacher_edit', {'id' : teacher.id }) }}">
                    <img src="{{ asset('') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('teacher_delete', {'id' : teacher.id }) }}"
                onclick="return confirm('Are you sure to delete this book ?');"
                >
                    <img src="{{ asset('') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
