{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-md-8 text-center mt-3">
        <div class="row">
            <div class="col-4">
                <img src="{{teacher.Teacher_image}}" width="300" height="300">
            </div>
            <div class="col-6">
                <table class="table table-bordered">

                    <tr> 
                        <th>ID</th>
                        <td>{{teacher.id}}
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{teacher.Teacher_name}} </td>
                    </tr>
                     <tr> 
                        <th>Age</th>
                        <td>{{teacher.Teacher_age}} </td>
                    </tr>
                     <tr> 
                        <th> Gender </th>
                        <td>{{ teacher.Teacher_gender }} </td>
                    </tr>
                     <tr> 
                        <th>Email </th>
                        <td>{{teacher.Teacher_email}}</td>
                    </tr>
                    <tr>
                        {% if teacher.Teacher_pass == null %}
                        <th> Password</th>
                        <td> Not Available </td>
                     {% else %}
                        <th> Password </th>
                        <td> Available </td>
                     {% endif %}
                    </tr>    
                </table>
            </div>
        </div>
    </div>
{% endblock %}